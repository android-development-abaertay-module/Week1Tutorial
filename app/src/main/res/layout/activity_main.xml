<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/dialerScreenBtn"
        android:onClick="dialerScreenBtn_Click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialer_screen"/>
    <Button
        android:id="@+id/browserScreenBtn"
        android:onClick="browserScreenBtn_Click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/browser_screen"/>
    <Button
        android:id="@+id/telephonyScreenBtn"
        android:onClick="telephonyBtn_Click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/telephony"/>
    <TextView
        android:id="@+id/clockTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:gravity="center"
        android:height="50dp"
        android:width="100dp"/>
</LinearLayout>
</android.support.constraint.ConstraintLayout>